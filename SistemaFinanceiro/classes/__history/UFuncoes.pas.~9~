uses
  dbsistema;

  function GetId(Campo, Tabela : String) : Integer;
    begin
      with
      TSQLQuery.Create(nil) do
      try
        SQLConnection := dmDados.SQLConnection;
        sql.Add('SELECT ' +Campo+ ' FROM ' +Tabela+ ' ORDER BY ' +Campo+ ' DESC LIMIT 1');
      finally

      end;
    end;

end.
